@using TaskList.Controllers
@using TaskList.Views.Helpers
@model IEnumerable<TaskList.Models.User>

@{
	ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Username)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Password)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Username)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.MaskPassword(item.Password)
				</td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.User_Id">Edit</a> |
					<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.User_Id">Details</a> |
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.User_Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
